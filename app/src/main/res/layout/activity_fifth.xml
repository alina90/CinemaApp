<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="program.cinema.FifthActivity" >
    
 <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="34dp"
        android:text="Lili are 13 ani şi îşi iubeşte din toată inima câinele, pe Hagen. Fata este devastată când tatăl ei îl lasă pe Hagen pe stradă, iar câinele dispare. Convinsă că dragostea poate învinge orice obstacol, Lili porneşte în căutarea câinelui. Film premiat cu trofeul Un Certain Regard la Cannes 2014."
        android:textSize="11sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_alignLeft="@+id/textView1"
        android:layout_marginBottom="26dp"
        android:text="Cinema Florin Piersic     Marţi : 20:00"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_marginBottom="16dp"
        android:text="Cinema City Polus          Vineri Miercuri : 15:00"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_marginBottom="16dp"
        android:text="Cinema City Iulius           Duminică : 22:30"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginLeft="21dp"
        android:layout_toRightOf="@+id/imageView1"
        android:lines="5"
        android:maxLines="5"
        android:text="Regia\nKornél Mundruczó\n\nCu\nZsófia Psotta, Sándor Zsótér, Lili Horváth "
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:src="@drawable/white_god" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="37dp"
        android:text="Sinopsis White God"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView6"
        android:layout_alignLeft="@+id/imageView1"
        android:text="Oraşul câinilor"
        android:textAppearance="?android:attr/textAppearanceSmall" />
</RelativeLayout>
