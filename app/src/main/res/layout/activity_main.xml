<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="6dip"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="program.cinema.MainActivity" >

    <ImageView
        android:id="@+id/icon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="film1"
        android:src="@drawable/de_ce_eu" />

    <TextView
        android:id="@+id/firstLine1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/icon1"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/icon1"
        android:gravity="center_vertical"
        android:text="De ce eu? (2015)"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/secondLine1"
        android:layout_width="wrap_content"
        android:layout_height="26dip"
        android:layout_alignLeft="@+id/firstLine1"
        android:layout_below="@+id/firstLine1"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="Gen film: Crimă, Dramă, Thriller"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/icon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon1"
        android:layout_marginTop="24dp"
        android:layout_toLeftOf="@+id/firstLine1"
        android:src="@drawable/the_woman_in_black_2_angel_of_death" />

    <TextView
        android:id="@+id/firstLine2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/secondLine1"
        android:layout_alignTop="@+id/icon2"
        android:text="The Woman in Black 2: Angel of Death (2015)"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/secondLine2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/firstLine2"
        android:layout_below="@+id/firstLine2"
        android:text="Gen film: Dramă, Horror, Thriller"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon2"
        android:layout_marginTop="24dp"
        android:layout_toLeftOf="@+id/firstLine1"
        android:src="@drawable/the_theory_of_everything" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="34dp"
        android:layout_toLeftOf="@+id/firstLine1"
        android:src="@drawable/white_god" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:layout_toLeftOf="@+id/firstLine1"
        android:src="@drawable/yellowbird" />

    <TextView
        android:id="@+id/firstLine3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/secondLine2"
        android:layout_alignTop="@+id/imageView1"
        android:text="The Theory of Everything (2014)"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/secondLine3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/firstLine3"
        android:layout_below="@+id/firstLine3"
        android:text="Gen film: Biografic, Dramă, Romantic, Dragoste"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/firstLine4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/secondLine3"
        android:layout_alignTop="@+id/imageView2"
        android:text="White God (2014)"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/secondLine4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/firstLine4"
        android:layout_below="@+id/firstLine4"
        android:text="Gen film: Dramă"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/firstLine5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/secondLine4"
        android:layout_alignTop="@+id/imageView3"
        android:text="Yellowbird (2014)"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/secondLine5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/firstLine5"
        android:layout_below="@+id/firstLine5"
        android:text="Gen film: Animaţie, Familie"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12sp" />

    <Button
        android:id="@+id/button1"
        style="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/firstLine3"
        android:layout_below="@+id/secondLine1"
        android:gravity="center_vertical|fill_vertical|center_horizontal"
        android:onClick="details1"
        android:text="Detalii"
        android:textSize="9sp"
        android:textStyle="bold|normal"
        android:typeface="normal" />

    <Button
        android:id="@+id/button2"
        style="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/firstLine3"
        android:layout_alignRight="@+id/firstLine3"
        android:gravity="center_vertical|fill_vertical|center_horizontal"
        android:onClick="details2"
        android:text="Detalii"
        android:textSize="9sp"
        android:textStyle="bold|normal"
        android:typeface="normal" />

    <Button
        android:id="@+id/button3"
        style="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/firstLine3"
        android:layout_below="@+id/secondLine3"
        android:gravity="center_vertical|fill_vertical|center_horizontal"
        android:onClick="details3"
        android:text="Detalii"
        android:textSize="9sp"
        android:textStyle="bold|normal"
        android:typeface="normal" />

    <Button
        android:id="@+id/button4"
        style="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignLeft="@+id/button3"
        android:gravity="center_vertical|fill_vertical|center_horizontal"
        android:onClick="details4"
        android:text="Detalii"
        android:textSize="9sp"
        android:textStyle="bold|normal"
        android:typeface="normal" />

    <Button
        android:id="@+id/button5"
        style="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button4"
        android:layout_below="@+id/secondLine5"
        android:gravity="center_vertical|fill_vertical|center_horizontal"
        android:onClick="details5"
        android:text="Detalii"
        android:textSize="9sp"
        android:textStyle="bold|normal"
        android:typeface="normal" />

 />

</RelativeLayout>